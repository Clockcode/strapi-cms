{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "ProductName": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid"
    },
    "Description": {
      "type": "richtext",
      "required": true
    },
    "Brand": {
      "model": "brand",
      "via": "Products"
    },
    "Variations": {
      "type": "component",
      "repeatable": true,
      "component": "product.product-variations",
      "required": true
    },
    "ProductFilterSettings": {
      "type": "component",
      "repeatable": false,
      "component": "filter.filters"
    },
    "Categories": {
      "collection": "category",
      "via": "products"
    },
    "Price": {
      "type": "decimal"
    },
    "DiscountedPrice": {
      "type": "decimal"
    }
  }
}
